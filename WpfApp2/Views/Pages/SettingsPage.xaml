<Page x:Class="lanpingcj.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="设置"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="24">
            <ui:TextBlock
                Margin="0,0,0,16"
                FontSize="20"
                FontWeight="SemiBold"
                Text="设置" />

            <!-- 外观设置 -->
            <ui:TextBlock
                Margin="0,0,0,8"
                FontTypography="BodyStrong"
                Text="其它设置" />

            <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Speaker228}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
                Grid.Row="0"
                FontTypography="Body"
                Text="声音" />
                        <ui:TextBlock
                Grid.Row="1"
                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                Text="关闭提示音，警告音不会被关闭" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox x:Name="SoundComboBox"
        MinWidth="200"
        SelectionChanged="SoundComboBox_SelectionChanged">
                    <ComboBoxItem Content="开启" />
                    <ComboBoxItem Content="关闭" />
                </ComboBox>
            </ui:CardControl>

            <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Copy20}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
                Grid.Row="0"
                FontTypography="Body"
                Text="点名不重复" />
                        <ui:TextBlock
                Grid.Row="1"
                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                Text="关闭/开启点名不重复" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox x:Name="Duplicate"
        MinWidth="200"
        SelectionChanged="DuplicateComboBox_SelectionChanged">
                    <ComboBoxItem Content="开启" />
                    <ComboBoxItem Content="关闭" />
                </ComboBox>
            </ui:CardControl>
            <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon DesktopSpeaker20}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
        Grid.Row="0"
        FontTypography="Body"
        Text="读出名字（TTS）" />
                        <ui:TextBlock
        Grid.Row="1"
        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
        Text="使用系统的智障TTS来读出名字" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox x:Name="tts_open"
                          MinWidth="200"
                          SelectionChanged="ttsComboBox_SelectionChanged">
                    <ComboBoxItem Content="开启" />
                    <ComboBoxItem Content="关闭" />
                </ComboBox>
            </ui:CardControl>
            <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon ArrowClockwise20}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
        Grid.Row="0"
        FontTypography="Body"
        Text="重置" />
                        <ui:TextBlock
        Grid.Row="1"
        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
        Text="点击重置来重置点名不重复" />
                    </Grid>
                </ui:CardControl.Header>
                <ui:Button 
                    Width="200"
                           Content="重置"
                          Click="Restart"
                          Name="重置"
                    Appearance="Primary">
                </ui:Button>
            </ui:CardControl>

            <!-- 关于信息 -->
            <ui:TextBlock
                Margin="0,24,0,8"
                FontTypography="BodyStrong"
                Text="关于" />

            <ui:CardExpander ContentPadding="0" Icon="{ui:ImageIcon '/headimg_dl.jpg', Width=38, Height=35}">
                <ui:CardExpander.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontTypography="Body"
                            Text="蓝屏抽奖机" />
                        <ui:TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Foreground="#909090"
                            Text="一个基于WPF的Fluent UI风格（？）的抽奖程序" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Margin="0,0,16,0"
                            VerticalAlignment="Center"
                            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                            Text="v2.0.0" />
                    </Grid>
                </ui:CardExpander.Header>
                <StackPanel>
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="克隆代码" />
                        <TextBlock
                            Grid.Column="1"
                            Foreground="#909090"
                            Text="git clone https://github.com/lanpinggai666/lanpingChouJiang.git" />
                    </Grid>
                    <ui:Anchor
                        Margin="0"
                        Padding="16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0"
                        NavigateUri="https://github.com/lanpinggai666/lanpingChouJiang/releases">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="查看更新" />
                            <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                        </Grid>
                    </ui:Anchor>
                    <ui:Anchor
                        Margin="0"
                        Padding="16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0,1,0,1"
                        CornerRadius="0"
                        NavigateUri="https://github.com/lanpinggai666/lanpingChouJiang/issues">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="报告问题" />
                            <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                        </Grid>
                    </ui:Anchor>
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="版本号" />
                        <TextBlock
                            Grid.Column="1"
                            Foreground="#909090"
                            Text="v2.0.0" />
                    </Grid>
                </StackPanel>
            </ui:CardExpander>
        </StackPanel>
    </ScrollViewer>
</Page>