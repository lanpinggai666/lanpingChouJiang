<Page x:Class="lanpingcj.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:lanpingcj.Views.Pages"
      Title="设置"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d"
      >
    <Page.Resources>
        <local:BooleanToOnOffConverter x:Key="BooleanToOnOffConverter"/>
    </Page.Resources>
    <ScrollViewer>
        <StackPanel Margin="24">
            <ui:TextBlock
                Margin="0,0,0,16"
                FontSize="20"
                FontWeight="SemiBold"
                Text="设置" />

            <!-- 外观设置 -->
            <ui:TextBlock
                Margin="0,0,0,8"
                FontTypography="BodyStrong"
                Text="其它设置" />
<Grid>
                <ContentPresenter x:Name="RootContentDialogPresenter"
                  />
            </Grid>
            <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon WindowArrowUp20}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
    Grid.Row="0"
    FontTypography="Body"
    Text="置于顶层" />
                        <ui:TextBlock
    Grid.Row="1"
    Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
    Text="使用uiAcess权限来置于顶层。" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:ToggleSwitch x:Name="TopmostToggleSwitch" 
                          Checked="TopmostToggleSwitch_Checked"
                          Unchecked="TopmostToggleSwitch_Unchecked"
                          OffContent="关" OnContent="开"
                          Margin="0,0,20,0"           />
                   
                </StackPanel>
            </ui:CardControl>
            <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Speaker228}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
                Grid.Row="0"
                FontTypography="Body"
                Text="声音" />
                        <ui:TextBlock
                Grid.Row="1"
                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                Text="关闭提示音，警告音不会被关闭" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:ToggleSwitch x:Name="SoundToggleSwitch" 
                                     Checked="SoundToggleSwitch_Checked"
                                     Unchecked="SoundToggleSwitch_Unchecked"      
                                     OffContent="关" OnContent="开"
                                     Margin="0,0,20,0"
/>
                    
                </StackPanel>
            </ui:CardControl>

            <ui:CardExpander Margin="0,0,0,12" ContentPadding="0" Icon="{ui:SymbolIcon Copy20}">
                <ui:CardExpander.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    FontTypography="Body"
                    Text="点名不重复" />
                        <ui:TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Foreground="#909090"
                    Text="设置点名不重复" />
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="1">
                            <ui:ToggleSwitch x:Name="DuplicateToggleSwitch"
                                         Checked="DuplicateToggleSwitch_Checked"
                                         Unchecked="DuplicateToggleSwitch_Unchecked"
                                         OffContent="关" OnContent="开"
                                         Margin="0,0,3,0"    
/>

                        </StackPanel>
                    </Grid>
                </ui:CardExpander.Header>
                <Grid>
                    
                    <Grid Margin="16" >
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="重置点名不重复" Margin="35,6,0,0" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ui:Button 
        Grid.Column="1"
        Width="150"
        Content="重置"
        Click="Restart"
        Name="restart">
                            </ui:Button>
                        </Grid>


                    </Grid>


                </Grid>

            </ui:CardExpander>
            <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon DesktopSpeaker20}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <ui:TextBlock
        Grid.Row="0"
        FontTypography="Body"
        Text="读出名字（TTS）" />
                        <ui:TextBlock
        Grid.Row="1"
        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
        Text="使用系统的智障TTS来读出名字" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:ToggleSwitch x:Name="TTSToggleSwitch"
                                     Checked="TTSToggleSwitch_Checked"
                                     Unchecked="TTSToggleSwitch_Unchecked"
                                     OffContent="关" OnContent="开"
                                     Margin="0,0,20,0"
/>
                    
                </StackPanel>
            </ui:CardControl>
            <ui:CardExpander Margin="0,0,0,12" ContentPadding="0" Icon="{ui:SymbolIcon Scales20}">
                <ui:CardExpander.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontTypography="Body"
                            Text="平衡概率" />
                        <ui:TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                            Text="通过累计次数来平衡每个人被抽到的概率" />
                    
                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1">
                    <ui:ToggleSwitch x:Name="ProbabilityToggleSwitch"
                                     Checked="ProbabilityToggleSwitch_Checked"
                                     Unchecked="ProbabilityToggleSwitch_Unchecked"
                                     OffContent="关" OnContent="开"
                                     Margin="0,0,3,0"
/>
                    
                </StackPanel>
                </Grid>
            </ui:CardExpander.Header>
                <Grid>

                    <Grid Margin="16" >
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="重置概率" Margin="35,6,0,0" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ui:Button 
                                Grid.Column="1"
                                Width="150"
                                Content="重置"
                                Click="Reset_Probability"
                                Name="reset_Probability">
                            </ui:Button>
                        </Grid>


                    </Grid>


                </Grid>

                </ui:CardExpander>




                <!-- 关于信息 -->
            <ui:TextBlock
                Margin="0,24,0,8"
                FontTypography="BodyStrong"
                Text="关于" />

            <ui:CardExpander ContentPadding="0" Icon="{ui:ImageIcon '/headimg_dl.jpg', Width=38, Height=38}">
                <ui:CardExpander.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontTypography="Body"
                            Text="蓝屏抽奖机" />
                        <ui:TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Foreground="#909090"
                            Text="一个基于WPF并使用Fluent System Design 的抽奖程序" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Margin="0,0,16,0"
                            VerticalAlignment="Center"
                            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                            Text="v2.0.0"
                            x:Name="version2"/>
                    </Grid>
                </ui:CardExpander.Header>
                <StackPanel>
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="克隆代码" />
                        <TextBlock
                            Grid.Column="1"
                            Foreground="#909090"
                            Text="git clone https://github.com/lanpinggai666/lanpingChouJiang.git" />
                    </Grid>
                    <ui:Anchor
                        Margin="0"
                        Padding="16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0"
                        NavigateUri="https://github.com/lanpinggai666/lanpingChouJiang/releases">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="查看更新" />
                            <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                        </Grid>
                    </ui:Anchor>
                    <ui:Anchor
                        Margin="0"
                        Padding="16"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0,1,0,1"
                        CornerRadius="0"
                        NavigateUri="https://github.com/lanpinggai666/lanpingChouJiang/issues">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="报告问题" />
                            <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                        </Grid>
                    </ui:Anchor>
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="版本号" />
                        <TextBlock
                            Grid.Column="1"
                            Foreground="#909090"
                            Text="v2.0.0"
                            x:Name="version"/>
                        
                    </Grid>
                </StackPanel>
            </ui:CardExpander>
            
        </StackPanel>
    </ScrollViewer>
</Page>