<ui:FluentWindow x:Class="lanpingcj.ChoseMoreMan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:lanpingcj"
        mc:Ignorable="d"
        Title="选择人数" Height="350" Width="460"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource ApplicationBackgroundBrush}"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        ResizeMode="NoResize"
        >

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="105"/>



            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"  
                Padding="20,12" CornerRadius="4" Margin="10,10,30,34" Grid.RowSpan="5">
            <StackPanel>
                <ui:TextBlock Text="选择人数" 
                           FontSize="22" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <ui:TextBlock Text="请从下拉列表中选择需要的人数配置" 
                           FontSize="14" 
                           Margin="0,3,0,0"  
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Content Section -->
        <StackPanel Grid.Row="3" Margin="30,21,30,0" VerticalAlignment="Top" Height="171" Grid.RowSpan="2">
            <!-- 增加了上边距为5 -->
            <ui:TextBlock Text="选择人数：" 
                       FontSize="16"
                       Margin="0,0,0,10"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ui:SymbolIcon Symbol="People24" 
                            Grid.Column="0" 
                            Margin="0,0,15,0"
                            Foreground="{DynamicResource SystemAccentColorBrush}"
                            FontSize="24"
                            VerticalAlignment="Center"/>

                <ComboBox x:Name="NumberComboBox" 
                      Grid.Column="1"
                      Height="40"
                      VerticalContentAlignment="Center"
                      FontSize="16"
                      Padding="10,0"
                      Background="Transparent"
                      BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                      BorderThickness="1"
                      SelectedIndex="0"
                      />
            </Grid>

            <!-- Info Section -->
            <Border Margin="0,25,0,0" 
                    Padding="15" 
                    CornerRadius="4"
                    Background="{DynamicResource SubtleFillColorSecondaryBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorSecondaryBrush}"
                    BorderThickness="1" Height="75">
                <StackPanel>
                    <ui:TextBlock Text="• 选择人数后点击确定进行下一步操作"
                               FontSize="13"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <ui:TextBlock Text="• 如需取消选择，请点击取消按钮"
                               FontSize="13"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,3,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Button Section -->
        <Border Grid.Row="4" 
                Padding="15,10"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" Margin="0,115,0,0" Grid.RowSpan="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="取消按钮"
                        Content="取消"
                        Width="120"
                        Height="36"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Click="Cancel"
                        Background="White"
                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="确定按钮"
                        Content="确定"
                        Width="120"
                        Height="36"
                        FontSize="14"
                        Click="OK"
                        Background="{ui:ThemeResource AccentTextFillColorTertiaryBrush}"
                        Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="Transparent"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>